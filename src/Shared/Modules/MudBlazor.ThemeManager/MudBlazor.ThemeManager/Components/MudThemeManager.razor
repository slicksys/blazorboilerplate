@namespace MudBlazor.ThemeManager

<MudDrawer @bind-Open="@Open" Anchor="Anchor.End" Elevation="25" Variant="@DrawerVariant.Temporary" DisableOverlay="true" Class="mud-themedrawer">
    <div class="pt-4 px-4">
        <MudText Typo="Typo.h6">Theme Presets</MudText>
        <MudSelect T="string" @bind-Value="@ThemePresets" Disabled="true" DisableUnderLine="true">
            <MudSelectItem Value="@("Not Implemented")" />
        </MudSelect>
    </div>
    <MudDivider Class="my-2" />
    <div class="pt-2 px-4">
        <MudText Typo="Typo.h6" Class="mb-4">Custom Settings</MudText>
        <MudSelect Label="Drawer ClipMode" T="DrawerClipMode" Value="@Theme.DrawerClipMode" ValueChanged="OnDrawerClipMode" Dense="true" DisableUnderLine="true" Class="my-2">
            <MudSelectItem T="DrawerClipMode" Value="DrawerClipMode.Never">Never</MudSelectItem>
            <MudSelectItem T="DrawerClipMode" Value="DrawerClipMode.Docked">Docked</MudSelectItem>
            <MudSelectItem T="DrawerClipMode" Value="DrawerClipMode.Always">Always</MudSelectItem>
        </MudSelect>
        <MudSelect Label="Font Family" T="string" Value="@Theme.FontFamily" ValueChanged="OnFontFamily" Dense="true" DisableUnderLine="true" Class="my-2">
            <MudSelectItem T="string" Value="@("Roboto")" />
            <MudSelectItem T="string" Value="@("Montserrat")" />
            <MudSelectItem T="string" Value="@("Segoe UI")" />
            <MudSelectItem T="string" Value="@("Ubuntu")" />
        </MudSelect>
        <MudSlider Step="1" Min="0" Max="30" T="int" Value="@Theme.DefaultBorderRadius" ValueChanged="OnDefaultBorderRadius" Class="mt-3"><MudText Typo="Typo.body2">Border Radius: <b>@($"{@Theme.DefaultBorderRadius}px")</b></MudText></MudSlider>
        <MudSlider Step="1" Min="0" Max="24" T="int" Value="@Theme.AppBarElevation" ValueChanged="OnAppBarElevation"><MudText Typo="Typo.body2">AppBar Elevation: <b>@($"{@Theme.AppBarElevation}")</b></MudText></MudSlider>
        <MudSlider Step="1" Min="0" Max="24" T="int" Value="@Theme.DrawerElevation" ValueChanged="OnDrawerElevation"><MudText Typo="Typo.body2">Drawer Elevation: <b>@($"{@Theme.DrawerElevation}")</b></MudText></MudSlider>
        <MudSlider Step="1" Min="0" Max="24" T="int" Value="@Theme.DefaultElevation" ValueChanged="OnDefaultElevation"><MudText Typo="Typo.body2">Default Elevation: <b>@($"{@Theme.DefaultElevation}")</b></MudText></MudSlider>
    </div>
    <div class="pt-6">
        <MudText Typo="Typo.body2" GutterBottom="true" Class="mx-4"><b>Theme Colors</b></MudText>
        <MudExpansionPanels Elevation="0" Square="true" Class="mud-thememanager-color-expansion mt-4">
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Primary" Color="@_customTheme.Palette.Primary" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Primary" ColorValue="@_customTheme.Palette.Primary" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Secondary" Color="@_customTheme.Palette.Secondary" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Secondary" ColorValue="@_customTheme.Palette.Secondary" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Tertiary" Color="@_customTheme.Palette.Tertiary" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Tertiary" ColorValue="@_customTheme.Palette.Tertiary" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
