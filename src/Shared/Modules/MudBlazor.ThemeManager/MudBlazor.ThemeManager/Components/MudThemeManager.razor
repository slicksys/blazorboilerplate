            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Success" Color="@_customTheme.Palette.Success" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Success" ColorValue="@_customTheme.Palette.Success" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Warning" Color="@_customTheme.Palette.Warning" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Warning" ColorValue="@_customTheme.Palette.Warning" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
