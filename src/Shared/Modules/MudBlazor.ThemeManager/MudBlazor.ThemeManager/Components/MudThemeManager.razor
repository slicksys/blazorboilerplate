            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Error" Color="@_customTheme.Palette.Error" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Error" ColorValue="@_customTheme.Palette.Error" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
