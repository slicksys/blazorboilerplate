@inject NavigationManager NavigationManager

<MudNavMenu Class="mt-4">
    <MudNavLink Icon="@Icons.Filled.Dashboard" Match="NavLinkMatch.All" Href="/">Dashboard</MudNavLink>
    <MudNavLink Icon="@Icons.Filled.Storage" Href="/dummy" OnClick="NavigateOnlyToHome">Servers</MudNavLink>
    <MudNavLink Icon="@Icons.Filled.AccountBalance" Href="/dummy" OnClick="NavigateOnlyToHome" Disabled="true">Billing</MudNavLink>
    <MudNavGroup Title="Settings" Expanded="true">
        <MudNavLink Icon="@Icons.Filled.People" Href="/dummy" OnClick="NavigateOnlyToHome">Users</MudNavLink>
        <MudNavLink Icon="@Icons.Filled.Security" Href="/dummy" OnClick="NavigateOnlyToHome">Security</MudNavLink>
    </MudNavGroup>
    <MudNavLink Href="/dummy" OnClick="NavigateOnlyToHome">About</MudNavLink>
</MudNavMenu>

@code {
    private void NavigateOnlyToHome()
    {
        NavigationManager.NavigateTo("/");
    }
} 